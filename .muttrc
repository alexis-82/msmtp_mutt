set sendmail="/usr/bin/msmtp"
set from=vostraemail
set realname="Nome"
set use_from=yes
set imap_user="vostraemail"
set imap_pass=vostrapassword
set smtp_url="smtps://vostrouser@smtp.gmail.com:465/"
set smtp_pass=vostrapassword
set spoolfile=imaps://vostrouser@imap.gmail.com:993/INBOX 
set folder="imaps://vostrouser@imap.gmail.com:993"
set record="+[Gmail]/Sent Mail"
set postponed="+[Gmail]/Drafts"
set header_cache="~/.mutt/cache/headers"
set message_cachedir="~/.mutt/cache/bodies"
set ssl_starttls=yes
set ssl_force_tls=yes

